{
  "name": "mounty",
  "version": "0.1.0",
  "description": "A tiny React transition manager with mount/unmount support and a familiar API.",
  "source": "index.tsx",
  "main": "dist/mounty.js",
  "module": "dist/mounty.es.js",
  "unpkg": "dist/mounty.umd.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "microbundle build --jsx react",
    "watch": "microbundle watch --compress false --jsx react",
    "publish": "npm publish",
    "test": "jest test.tsx"
  },
  "keywords": [
    "react",
    "react transition group",
    "react transition",
    "toggle",
    "animation"
  ],
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/estrattonbailey/mounty.git"
  },
  "author": "estrattonbailey",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/estrattonbailey/mounty/issues"
  },
  "homepage": "https://github.com/estrattonbailey/mounty#readme",
  "devDependencies": {
    "@types/enzyme": "^3.10.4",
    "@types/enzyme-adapter-react-16": "^1.0.5",
    "@types/jest": "^25.1.1",
    "@types/react": "^16.9.11",
    "@types/react-dom": "^16.9.3",
    "enzyme": "^3.11.0",
    "enzyme-adapter-react-16": "^1.15.2",
    "jest": "^25.1.0",
    "microbundle": "^0.11.0",
    "ts-jest": "^25.2.0",
    "ts-node": "^8.4.1",
    "typescript": "^3.7.5"
  },
  "jest": {
    "verbose": true,
    "preset": "ts-jest",
    "globals": {
      "ts-jest": {
        "tsConfig": {
          "noErrorTruncation": true,
          "noImplicitAny": true,
          "strictNullChecks": true,
          "jsx": "react"
        }
      }
    }
  },
  "dependencies": {
    "react": "^16.11.0",
    "react-dom": "^16.11.0"
  }
}
